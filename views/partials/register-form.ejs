<!-- Button trigger modal -->
<div class="registerBar">
  <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Enregistrement
  </button> 
  <form id="connectionForm">
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="">@</span>
      </div>
      <input id="cemail" type="email" name="email" required class="form-control" placeholder="Email">
      <input id="cpassword" type="password" name="password" required class="form-control" placeholder="Mot de passe">
      <div class="input-group-append">
        <button id="btConnect" class="btn btn-primary" type="button">Connexion</button>
      </div>
    </div>
  </form>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <form id="registerForm">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Register</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="remail">Adresse Email</label>
          <input type="email" class="form-control" id="remail" name="remail" aria-describedby="remailHelp" placeholder="Ecrire votre email" required>
          <small id="remailHelp" class="form-text text-muted">le mail n'est utilisé que pour enregistrer la progression</small>
        </div>
        <div class="form-group">
          <label for="rusername">Pseudo</label>
          <input type="username" class="form-control" id="rusername" name="rusername" aria-describedby="rusernameHelp" placeholder="Pseudo" required>
          <small id="rusernameHelp" class="form-text text-muted">le pseudo affiché en jeu et dans les highscores</small>
        </div>
        <div class="form-group">
          <label for="rpassword">Mot de passe</label>
          <input type="password" class="form-control" id="rpassword" name="rpassword" placeholder="Mot de passe" required>
        </div>
        <div class="form-group">
          <label for="crpassword">Confirmer le mot de passe</label>
          <input type="password" class="form-control" id="crpassword" name="crpassword" placeholder="Confirmer le mot de passe" required>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        <button id="btRegister" type="button" class="btn btn-primary">S'enregistrer</button>
      </div>
    </form>
    </div>
  </div>
</div>

