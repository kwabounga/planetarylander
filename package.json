{
  "name": "maxi",
  "version": "1.0.0",
  "description": "game like Atari's LunarLander in arcade mode",
  "title": "Planetary Lander",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "combiner":{
    "name":"planetary-lander",
    "files":[
      "../State.js",
      "../tools/tools.js",
      "../tools/Keyboard.js",
      "../hud/Ui.js",
      "../game/levels/Level.js",
      "../game/landers/Flag.js",
      "../game/landers/Stabilizer.js",
      "../game/landers/Reactor.js",
      "../game/landers/LanderBody.js",
      "../game/levels/BonusSprite.js",
      "../game/landers/Lander.js",
      "../game/landers/Landers.js",
      "../game/levels/Terrains.js",
      "../menu/ButtonSprite.js",
      "../menu/Button.js",
      "../menu/MenuBg.js",
      "../menu/Menu.js",
      "../Main.js"
    ]
  },
  "scripts": {
    "clean": "node ./exports/scripts/clean.js",
    "combine": "node ./exports/scripts/combiner.js",
    "minify": "npx google-closure-compiler --js=./bin/%npm_package_combiner_name%.js --js_output_file=./bin/%npm_package_combiner_name%.min.js",
    "build":"npm run clean && npm run combine && npm run minify && echo 'combined and minified'",
    "dev":"npm run clean && npm run combine && http-server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwabounga/maxi.git"
  },
  "author": "Jean-Yves Chaillou @ kwa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kwabounga/maxi/issues"
  },
  "homepage": "https://github.com/kwabounga/maxi#readme",
  "dependencies": {
    "google-closure-compiler": "^20210406.0.0"
  }
}
